# useful GUI mouse settings
#set -g mode-mouse on
#set -g mouse-resize-pane on
#set -g mouse-select-pane on
#set -g mouse-select-window on

if-shell "[ -f ~/.tmux.conf.theme ]" 'source ~/.tmux.conf.theme'

# local theme changes
set -g pane-active-border-style fg=colour185
set -g status-right '#[fg=black,bg=colour185,bold] #h '
setw -g window-status-style fg=colour185
setw -g window-status-current-style bg=colour185
