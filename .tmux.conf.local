# useful GUI mouse settings
#set -g mode-mouse on
#set -g mouse-resize-pane on
#set -g mouse-select-pane on
#set -g mouse-select-window on

if-shell "[ -f ~/.tmux.conf.theme ]" 'source ~/.tmux.conf.theme'

# local theme changes
set -g pane-active-border-fg colour166
set -g status-right '#[fg=black,bg=colour166,bold] #h '
setw -g window-status-fg colour166
setw -g window-status-current-bg colour166
